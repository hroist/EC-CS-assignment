<Page x:Class="WPF_pages.Pages.AddTodo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_pages.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddTodo">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Add todos" FontSize="20" FontWeight="Medium" Margin="0 0 0 10"/>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Enter a todo..." />
            <TextBox x:Name="tb_Todo" Padding="5" Margin="0 5 0 0" />
            <Button x:Name="btn_Add" Content="Add Todo" Padding="8" Click="btn_Add_Click" />
        </StackPanel>
    </Grid>
</Page>
